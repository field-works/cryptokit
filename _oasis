            keccak.h,
            keccak.c,
            stubs-sha3.c,
            chacha20.h,
            chacha20.c,
            stubs-chacha20.c
  BuildDepends: unix, num
  if flag(zlib)
    CCOpt: -DHAVE_ZLIB
    if system(win32) || system(win64)
      CCLib: zlib.lib
    else
      CCLib: -lz
  if system(win32) || system(win64)
    CCLib+: advapi32.lib
  else if system(mingw) || system(mingw64)
    CCLib+: -ladvapi32
  if flag(hardwaresupport)
    CCOpt+: -maes

